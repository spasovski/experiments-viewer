@import 'lib';

$y-axis-width = 10px;

.charts {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;

  .chart {
    height: $chart-preview-height;
    padding-bottom: $lrg-padding;
    position: relative;
    width: $chart-preview-width;
    margin-bottom: $med-padding;
  }
  .chart-list-name {
    color: $mild-blue;
    font-size: 15px;
    text-align: center;
    font-weight: 100;
    padding: 10px 0 10px $y-axis-width; // Adjustment for SVG margins and enough padding to make it a decent-sized tooltip target
    margin: 0;
  }
  .chart-link {
    margin-bottom: $med-padding;
  }
  .chart-link, .chart-link:hover {
    text-decoration: none;
    color: inherit;
  }
  .tooltip {
    margin-left: $y-axis-width;
  }
}

.chart-config {
  display: flex;
  height: 40px;
  //background-image: linear-gradient(0, #001021 0%, #00224A 100%);
  //background-image: linear-gradient(180deg, #7ED321 0%, #000000 100%);
  //background-color: rgba(65, 117, 5, 0.3);
  //background-color: rgba(126, 211, 33, 0.5);
  background-image: radial-gradient(40% 728%, rgba(126, 211, 33, 0.3), #000000);
  margin: -20px 0 20px;
  padding: 0 15px;
  justify-content: space-between;

  > * {
    align-self: center;
  }
}

.dataset-config-content {
  width: 300px;
  display: flex;
  justify-content: space-between;

  > * {
    align-self: center;
  }
}

@media $base-tablet {
  .chart-link {
    margin: 10px;
  }
}
