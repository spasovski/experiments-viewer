@import 'lib';

$btn-small-height = 26px;

.button {
  background-color: #00224a;
  border-radius: 3px;
  color: #fff;
  cursor: pointer;
  font-size: 12px;
  font-weight: 200;
  padding: 0 10px;
  border: 0;
  line-height: 30px;
  display: inline-block;

  &:hover {
    background-color: $mild-blue;
  }
  &.btn-small {
    height: $btn-small-height;
    line-height: $btn-small-height;
  }
}
